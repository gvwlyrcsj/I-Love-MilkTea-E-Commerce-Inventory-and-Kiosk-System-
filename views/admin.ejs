<%- include('partials/sidebar') %>
<style>
    body {
      margin: 0;
      font-family: 'Arial', sans-serif;
      display: flex;
      height: 100vh;
      flex-direction: row;
      background-color: #f4f6f9;
    }

    .sidebar {
      width: 250px;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      background-color: #343a40;
      color: #fff;
      padding-top: 20px;
      display: flex;
      flex-direction: column;
    }

    .sidebar .nav-link {
      color: #ddd;
      margin-bottom: 10px;
    }

    .sidebar .nav-link:hover {
      color: #fff;
      background-color: #495057;
      border-radius: 4px;
    }

    .sidebar img {
      width: 100px;
      height: 100px;
      object-fit: cover;
    }

    .content {
      margin-left: 250px;
      padding: 40px;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    @media (max-width: 768px) {
      .sidebar {
        width: 200px;
      }

      .content {
        margin-left: 200px;
      }
    }

    h2 {
      color: #34495e;
    }

    .btn-primary {
      background-color: #3498db;
      border: none;
    }

    .btn-primary:hover {
      background-color: #2980b9;
    }

    /* Table Styling */
    #ordersTable {
      font-size: 14px;
    }

    thead {
      background-color: #34495e;
      color: white;
    }

    tbody tr:hover {
      background-color: #ecf0f1;
    }

    .table th,
    .table td {
      vertical-align: middle;
    }

    .table td img {
      width: 100px;
      height: auto;
      border-radius: 5px;
    }

    .table td .btn {
      font-size: 14px;
      padding: 10px 20px;
    }

    .dataTables_wrapper .dataTables_filter input {
      border-radius: 4px;
      padding: 5px;
      font-size: 14px;
    }

    .dataTables_wrapper .dataTables_length select {
      border-radius: 4px;
      padding: 5px;
      font-size: 14px;
    }
  </style>
  <div class="content">
    <header class="p-3 bg-primary text-white">
      <h1>Dashboard</h1>
    </header>
    <br><br>
    <div class="row">
      <div class="col-md-6 mb-4">
        <div class="card shadow-lg h-100 bg-danger text-white"> <!-- Blue background -->
          <div class="card-body text-center text-white">
            <h5 class="card-title">Best Seller</h5>
            <h3 class="card-text"><%= bestSeller %></h3>
            <div class="mt-3">
              <img src="<%= bestSellerImage %>" alt="Best Seller: <%= bestSeller %>" class="img-fluid rounded" style="width: 150px; height: auto;">
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-6 mb-4">
        <div class="card shadow-lg h-100" style="background-color: #FF4500;">
            <!-- Red-Orange background -->
            <div class="card-body d-flex flex-column justify-content-center align-items-center text-white">
                <h5 class="card-title">Total Sales</h5>
                <h1 class="card-text" style="font-size: calc(2vw + 2vh); line-height: 1; word-wrap: break-word; overflow-wrap: break-word;">
                    ₱<%= totalSales %>
                </h1>
            </div>
        </div>
    </div>
    
    
    
    <section class="p-4">
      <div class="row">
          <div class="col-md-3 mb-4">
              <div class="card shadow-lg bg-primary text-white">
                  <div class="card-body">
                      <h5 class="card-title">E-Commerce Daily Sales</h5>
                      <h3 class="card-text">₱<%= dailySales %></h3>
                  </div>
              </div>
          </div>
  
          <div class="col-md-3 mb-4">
              <div class="card shadow-lg bg-success text-white">
                  <div class="card-body">
                      <h5 class="card-title">E-Commerce Weekly Sales</h5>
                      <h3 class="card-text">₱<%= weeklySales %></h3>
                  </div>
              </div>
          </div>
  
          <div class="col-md-3 mb-4">
              <div class="card shadow-lg bg-warning text-dark">
                  <div class="card-body">
                      <h5 class="card-title">E-Commerce Monthly Sales</h5>
                      <h3 class="card-text">₱<%= monthlySales %></h3>
                  </div>
              </div>
          </div>
  
          <div class="col-md-3 mb-4">
              <div class="card shadow-lg bg-info text-white">
                  <div class="card-body">
                      <h5 class="card-title">E-Commerce Yearly Sales</h5>
                      <h3 class="card-text">₱<%= yearlySales %></h3>
                  </div>
              </div>
          </div>
      </div>
  
      <div class="row">
          <div class="col-md-3 mb-4">
              <div class="card shadow-lg bg-primary text-white">
                  <div class="card-body">
                      <h5 class="card-title">Kiosk Daily Sales</h5>
                      <h3 class="card-text">₱<%= kioskDailySales %></h3>
                  </div>
              </div>
          </div>
  
          <div class="col-md-3 mb-4">
              <div class="card shadow-lg bg-success text-white">
                  <div class="card-body">
                      <h5 class="card-title">Kiosk Weekly Sales</h5>
                      <h3 class="card-text">₱<%= kioskWeeklySales %></h3>
                  </div>
              </div>
          </div>
  
          <div class="col-md-3 mb-4">
              <div class="card shadow-lg bg-warning text-dark">
                  <div class="card-body">
                      <h5 class="card-title">Kiosk Monthly Sales</h5>
                      <h3 class="card-text">₱<%= kioskMonthlySales %></h3>
                  </div>
              </div>
          </div>
  
          <div class="col-md-3 mb-4">
              <div class="card shadow-lg bg-info text-white">
                  <div class="card-body">
                      <h5 class="card-title">Kiosk Yearly Sales</h5>
                      <h3 class="card-text">₱<%= kioskYearlySales %></h3>
                  </div>
              </div>
          </div>
      </div>
  
      <div class="row">
          <div class="col-md-3 mb-4">
              <div class="card shadow-lg bg-primary text-white">
                  <div class="card-body">
                      <h5 class="card-title">Combined Daily Sales</h5>
                      <h3 class="card-text">₱<%= combinedDailySales %></h3>
                  </div>
              </div>
          </div>
  
          <div class="col-md-3 mb-4">
              <div class="card shadow-lg bg-success text-white">
                  <div class="card-body">
                      <h5 class="card-title">Combined Weekly Sales</h5>
                      <h3 class="card-text">₱<%= combinedWeeklySales %></h3>
                  </div>
              </div>
          </div>
  
          <div class="col-md-3 mb-4">
              <div class="card shadow-lg bg-warning text-dark">
                  <div class="card-body">
                      <h5 class="card-title">Combined Monthly Sales</h5>
                      <h3 class="card-text">₱<%= combinedMonthlySales %></h3>
                  </div>
              </div>
          </div>
  
          <div class="col-md-3 mb-4">
              <div class="card shadow-lg bg-info text-white">
                  <div class="card-body">
                      <h5 class="card-title">Combined Yearly Sales</h5>
                      <h3 class="card-text">₱<%= combinedYearlySales %></h3>
                  </div>
              </div>
          </div>
      </div>
  
      <div class="row mt-5">
          <div class="col-12">
              <div class="card shadow-lg">
                  <div class="card-body">
                      <h5 class="card-title text-center">Income for the Past 7 Days</h5>
                      <canvas id="incomeChart" width="400" height="200"></canvas>
                  </div>
              </div>
          </div>
      </div>
  </section>
      </div>
                                          
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const salesDates = <%- JSON.stringify(salesDates) %>;
      const salesData = <%- JSON.stringify(salesData) %>;

      const ctx = document.getElementById('incomeChart').getContext('2d');
      const config = {
        type: 'bar',
        data: {
          labels: salesDates,
          datasets: [{
            label: 'Daily Income',
            data: salesData,
            backgroundColor: [
              'rgba(255, 99, 132, 0.2)',
              'rgba(255, 159, 64, 0.2)',
              'rgba(255, 205, 86, 0.2)',
              'rgba(75, 192, 192, 0.2)',
              'rgba(54, 162, 235, 0.2)',
              'rgba(153, 102, 255, 0.2)',
              'rgba(201, 203, 207, 0.2)'
            ],
            borderColor: [
              'rgb(255, 99, 132)',
              'rgb(255, 159, 64)',
              'rgb(255, 205, 86)',
              'rgb(75, 192, 192)',
              'rgb(54, 162, 235)',
              'rgb(153, 102, 255)',
              'rgb(201, 203, 207)'
            ],
            borderWidth: 1
          }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      };

      new Chart(ctx, config);
    });
  </script>
</body>
</html>
