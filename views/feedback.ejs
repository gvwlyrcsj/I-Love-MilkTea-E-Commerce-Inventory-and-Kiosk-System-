<%- include('partials/sidebar') %>
  
    <!-- Main Content -->
    <div class="content">
      <header>
        <h1>Feedback</h1>
      </header>
      <div class="container mt-5">
        <!-- Contact Queries Table -->
        <table id="contactQueriesTable" class="table table-bordered table-striped">
          <thead class="bg-secondary text-white">
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Subject</th>
              <th>Message</th>
              <th>Created At</th>
            </tr>
          </thead>
          <tbody>
            <% contacts.forEach(contact => { %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.email %></td>
              <td><%= contact.subject %></td>
              <td><%= contact.message %></td>
              <td><%= new Date(contact.created_at).toLocaleString() %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- DataTables JS -->
  <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
  <script>
    $(document).ready(function() {
      // Initialize DataTable with pagination, sorting, and responsive options
      $('#contactQueriesTable').DataTable({
        "paging": true,       // Enable pagination
        "searching": true,    // Enable search functionality
        "ordering": true,     // Enable sorting on columns
        "pageLength": 10,     // Default rows per page
        "order": [[4, "desc"]], // Order by 'Created At' in descending order
        "responsive": true     // Optional: makes table responsive
      });
    });
  </script>
</body>
</html>
